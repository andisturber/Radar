.title {
    width: 100%;
    height: 80rpx;
    background: rgba(248,248,248,1);
    display: flex;
}

.time-img {
    width: 30rpx;
    height: 30rpx;
    margin: 25rpx;
}

.title-name {
    font-size: 26rpx;
    color: rgba(102,102,102,1);
    line-height: 80rpx;
}

.item {
    height: 98rpx;
    width: 90%;
    font-size: 28rpx;
    color: rgba(51,51,51,1);
    line-height: 98rpx;
    display: flex;
    border-bottom: 1rpx solid rgba(247,247,247,1);
    margin: 0 5%;
}

.item-text {
    flex: 1;
}

.wx-switch-input {
    width: 82rpx!important;
    height: 40rpx!important;
}

.wx-switch-input::before {
    width: 81rpx!important;
    height: 37rpx!important;
}

.wx-switch-input::after {
    width: 45rpx!important;
    height: 38rpx!important;
}